<idea-plugin>
    <id>io.sarl.intellij</id>
    <name>Sarl</name>
    <vendor email="support@sarl.io" url="http://www.sarl.io">Sarl</vendor>

    <description><![CDATA[
    Adds support for the Sarl multi-agent language to IntelliJ Idea
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.all</depends>

    <extensions defaultExtensionNs="com.intellij">
        <preloadingActivity implementation="io.sarl.intellij.SarlPluginPreloadingActivity"/>

        <moduleType id="SARL_MODULE" implementationClass="io.sarl.intellij.SarlModuleType"/>

        <!-- Project creation -->

        <!-- File-type factory -->
        <fileTypeFactory implementation="io.sarl.intellij.SarlFileTypeFactory"/>

        <!-- AST factory -->
        <lang.ast.factory language="Sarl" implementationClass="io.sarl.intellij.ast.SarlASTFactory" />

        <!-- Parser -->
        <lang.parserDefinition language="Sarl" implementationClass="io.sarl.intellij.parser.SarlParserDefinition"/>

        <!-- Annotators -->
        <annotator language="Sarl" implementationClass="io.sarl.intellij.ide.annotator.SarlValidatorAnnotator" />

        <!-- Completion -->
        <completion.contributor language="any" implementationClass="com.intellij.codeInsight.completion.JavaClassNameCompletionContributor" />
        <completion.contributor language="Sarl" implementationClass="io.sarl.intellij.ide.completion.SarlCompletionContributor" />

        <!-- Structure view -->
        <lang.psiStructureViewFactory language="Sarl"
                                      implementationClass="io.sarl.intellij.ide.structview.SarlStructureViewFactory" />

        <!-- Highlighter -->
        <lang.syntaxHighlighterFactory language="Sarl" implementationClass="io.sarl.intellij.ide.highlighter.SarlSyntaxHighlighterFactory" />"

        <!-- Formatter -->

        <!-- Commenter (it's the same as Java's) -->
        <lang.commenter language="Sarl" implementationClass="com.intellij.lang.java.JavaCommenter" />

        <!--File type support-->
        <internalFileTemplate name="Sarl Class"/>
        <internalFileTemplate name="Sarl Agent"/>
        <internalFileTemplate name="Sarl Behavior"/>
        <internalFileTemplate name="Sarl Capacity"/>
        <internalFileTemplate name="Sarl Event"/>
        <internalFileTemplate name="Sarl Skill"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="Sarl.NewFile" class="io.sarl.intellij.actions.NewSarlFileAction"
                text="Sarl File" description="Create new Sarl file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>
</idea-plugin>