<idea-plugin>
    <id>io.sarl.io.sarl.intellij</id>
    <name>Sarl plugin</name>
    <vendor email="support@sarl.io" url="http://www.sarl.io">Sarl</vendor>

    <description><![CDATA[
    Adds support for the Sarl multi-agent language to IntelliJ Idea
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="io.sarl.intellij.SarlFileTypeFactory"/>
        <!--<moduleType id="SARL_MODULE_TYPE" implementationClass="io.sarl.intellij.SarlModuleType"/>-->
        <moduleBuilder builderClass="io.sarl.intellij.SarlModuleBuilder" />
        <syntaxHighlighter implementationClass="io.sarl.intellij.highlighter.SarlSyntaxHighlighter" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="Sarl.NewFile" class="io.sarl.intellij.actions.NewSarlFileAction"
                text="Sarl File" description="Create new Sarl file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFromTemplate"/>
        </action>
    </actions>
</idea-plugin>